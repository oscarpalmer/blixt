{
	"author": {
		"name": "Oscar Palmér",
		"url": "https://oscarpalmer.se"
	},
	"browser": "dist/blixt.iife.js",
	"description": "⚡️",
	"devDependencies": {
		"@marketgridsys/prettier": "^2.9.0-mgs.5",
		"esbuild": "^0.19",
		"xo": "^0.55"
	},
	"files": [
		"dist",
		"src",
		"types"
	],
	"jsdelivr": "dist/blixt.iife.js",
	"keywords": [
		"reactive",
		"template"
	],
	"license": "MIT",
	"main": "dist/blixt.iife.js",
	"module": "dist/blixt.js",
	"name": "@oscarpalmer/blixt",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oscarpalmer/blixt.git"
	},
	"scripts": {
		"build": "npm run build:esm; npm run build:iife; npm run types",
		"build:esm": "esbuild ./src/index.js --bundle --format=esm --outfile=./dist/blixt.js --target=es2020",
		"build:iife": "esbuild ./src/index.js --bundle --format=iife --global-name=Blixt --outfile=./dist/blixt.iife.js --target=es2020",
		"types": "./node_modules/.bin/tsc ./src/index.js --allowJs --declaration --declarationDir ./types --emitDeclarationOnly --removeComments",
		"watch": "esbuild ./src/index.js --bundle --watch --format=esm --main-fields=module,main --outfile=dist/blixt.js --platform=neutral --target=esnext",
		"xo": "./node_modules/.bin/xo ./src/*.js --env browser"
	},
	"type": "module",
	"types": "src/index.d.ts",
	"unpkg": "dist/blixt.iife.js",
	"version": "0.5.0",
	"xo": {
		"rules": {
			"no-use-extend-native/no-use-extend-native": "off"
		}
	}
}
