{
	"author": {
		"name": "Oscar Palmér",
		"url": "https://oscarpalmer.se"
	},
	"description": "⚡️",
	"devDependencies": {
		"@happy-dom/global-registrator": "^12.10",
		"@rollup/plugin-typescript": "^11.1",
		"bun": "^1.0",
		"prettier": "^3.1",
		"rollup": "^4.5",
		"typescript": "^5.3",
		"xo": "^0.56"
	},
	"exports": {
		".": {
			"types": "./types/index.d.ts",
			"import": "./dist/blixt.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src",
		"types"
	],
	"jsdelivr": "dist/blixt.iife.js",
	"keywords": [
		"hydration",
		"reactive",
		"template"
	],
	"license": "MIT",
	"main": "dist/blixt.js",
	"module": "dist/blixt.js",
	"name": "@oscarpalmer/blixt",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"switchIndent": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oscarpalmer/blixt.git"
	},
	"scripts": {
		"build": "npm run build:esm && npm run build:iife",
		"build:esm": "rollup -c",
		"build:iife": "rollup -c --environment ROLLUP_FORMAT:iife",
		"test": "bun test --coverage --preload ./test/preload.ts",
		"types": "tsc ./src/index.ts --declaration --declarationDir ./types --emitDeclarationOnly",
		"watch": "rollup -c -w",
		"xo": "xo ./src/*.ts ./src/**/*.ts --env browser"
	},
	"type": "module",
	"types": "src/index.d.ts",
	"unpkg": "dist/blixt.iife.js",
	"version": "0.32.0",
	"xo": {
		"envs": [
			"browser"
		],
		"prettier": true,
		"rules": {
			"import/extensions": "off",
			"import/no-cycle": "off"
		}
	}
}